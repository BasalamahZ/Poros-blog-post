    <div class="container1">
      <form action="/create" method="POST" id="create" enctype="multipart/form-data">
      <div class="post-box">
        <div class="left"></div>
        <div class="right" style="text-align: center;">
          <h2 class="1">Create a Post</h2>
        </div>
        <div class="">
          <label for="image" class="img">Unggah Gambar Untuk Post</label>
          <div class="form-group">
            <input class="file" name="image" type="file" id="image" />
          </div>
        </div>
        <div>
          <div>
            <label for="title">Masukkan Judul Postingan</label>
          </div>
          <input type="text" class="field" name="title" id="title" placeholder="Input Your Title" />
        </div>
        <div>
          <div>
          <label for="author">Masukkan Author Postingan</label>
          </div>
          <input type="text" class="field" name="username" id="username" placeholder="Input Author's Name" />
        </div>
        <div>
          <div>
            <label for="desc">Deskripsi Postingan</label>
          </div>
          <textarea class="field area" name="desc" id="desc" placeholder="Write Here..."></textarea>
        </div>
        <div class="input-group mb-3">
          <select class="form-select" name="category" id="category">
            <option selected disabled>Choose a Category For Posts</option>
            <option value="Technologies">Technologies</option>
            <option value="Sci-fi">Sci-fi</option>
            <option value="College">College</option>
            <option value="Health">Health</option>
            <option value="Sport5">Sport</option>
            <option value="Automotive">Automotive</option>
            <option value="Business">Business</option>
            <option value="Travel">Travel</option>
            <option value="Animals and Plants">Animals and Plants</option>
          </select>
          <label class="input-group-text" for="inputGroupSelect">Categories</label>
        </div>
        <div>
          <button class="btn" style="margin-top: 2%;" type="submit">Post</button>
        </div>
      </div>
      </form>
